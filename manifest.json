{
  "manifest_version": 3,
  "name": "Spotify Context-Copy",
  "version": "1.0",
  "description": "When listening to a song you can alt + s to copy the song name and alt + a to copy the artist name.",
  "permissions": [
    "clipboardWrite"
  ],
  "content_scripts": [
    {
      "matches": ["*://open.spotify.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/CopySpoti.png",
    "128": "icons/CopySpoti.png"
  },
  "action": {
    "default_icon": {
      "16":"icons/CopySpoti.png",
      "128":"icons/CopySpoti.png"
    }
  }
}
